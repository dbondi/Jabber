<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/poll"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/poll_option_background">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/lato_black"
                            android:textSize="16dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/option_1"
                            android:textColorHint="#CCFFFFFF"
                            android:hint="Option 1">

                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/poll_option_background">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/lato_black"
                            android:textSize="16dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/option_2"
                            android:textColorHint="#CCFFFFFF"
                            android:hint="Option 2">

                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option_3_box"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/poll_option_background">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/lato_black"
                            android:textSize="16dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/option_3"
                            android:textColorHint="#CCFFFFFF"
                            android:hint="Option 3">

                        </EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option_4_box"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="50dp"
                        android:orientation="horizontal"
                        android:background="@drawable/poll_option_background">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/lato_black"
                            android:textSize="16dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/option_4"
                            android:textColorHint="#CCFFFFFF"
                            android:hint="Option 4">

                        </EditText>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="Poles are active for 24hrs">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cancel_poll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/circle_black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancel_white">
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|right">
                <LinearLayout
                    android:id="@+id/add_poll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/plus"
                    android:orientation="horizontal">

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="">

                </TextView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>