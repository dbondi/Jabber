<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/poll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:paddingStart="45dp"
        android:paddingTop="5dp"
        android:paddingEnd="45dp"
        android:paddingBottom="7dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option_1_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/clear_border">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/option_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:hint="Option 1"
                                android:textColor="#FFFFFF"
                                android:textColorHint="#CCFFFFFF"
                                android:textSize="16dp">

                            </EditText>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left|center"
                                android:background="@drawable/small_grey_circle"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/small_check"></LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/option_1_vote"
                            android:background="#77f2f2f2">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:textSize="16dp">

                            </EditText>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option_2_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/clear_border">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/option_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:hint="Option 2"
                                android:textColor="#FFFFFF"
                                android:textColorHint="#CCFFFFFF"
                                android:textSize="16dp">

                            </EditText>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/small_grey_circle"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/small_check"></LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/option_2_vote"
                            android:background="#77f2f2f2">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:textSize="16dp">

                            </EditText>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option_3_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/clear_border_fill">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF"
                                android:id="@+id/option_3"
                                android:textColorHint="#CCFFFFFF"
                                android:hint="Option 3">

                            </EditText>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/small_grey_circle">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:background="@drawable/small_check">
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/option_3_vote"
                            android:background="#77f2f2f2">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:textSize="16dp">

                            </EditText>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option_4_box"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/clear_border">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF"
                                android:id="@+id/option_4"
                                android:textColorHint="#CCFFFFFF"
                                android:hint="Option 4">

                            </EditText>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:background="@drawable/small_grey_circle">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:background="@drawable/small_check">
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/option_4_vote"
                            android:background="#77f2f2f2">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="#00FFFFFF"
                                android:fontFamily="@font/lato_black"
                                android:textSize="16dp">

                            </EditText>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/votePreCast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/poleNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="#FFFFFF"
                            android:gravity="left"
                            android:text="1 vote">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right">

                        <LinearLayout
                            android:id="@+id/castVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/clear_button">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vote"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>