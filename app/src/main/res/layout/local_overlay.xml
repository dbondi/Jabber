<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11293f"
            android:id="@+id/rc_messages"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:layout_weight="0.09"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_tab_gradient">
                </Button>
                <TextView
                    android:id="@+id/localLocationText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_tab_gradient">
                </TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:background="@drawable/top_tab_gradient"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:background="@drawable/top_tab_gradient"
                    android:orientation="horizontal">

                    <com.nightonke.jellytogglebutton.JellyToggleButton
                        android:id="@+id/localCitySwitch"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        app:jtbLeftText="Local"
                        app:jtbRightText="City"
                        app:jtbLeftTextColor="@android:color/black"
                        app:jtbRightTextColor="@android:color/black"
                        app:jtbLeftTextSize="13sp"
                        app:jtbRightTextSize="13sp"
                        app:jtbLeftBackgroundColor="#45ff9c"
                        app:jtbRightBackgroundColor="#7e3dff"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.70"
                android:textColor='@android:color/white'>
            </LinearLayout>
            <LinearLayout

                android:layout_weight="0.1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/newMessageTextLeft"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:textColor='@android:color/white'>
                </TextView>
                <Button
                    android:id="@+id/new_message"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button_green">
                </Button>

                <TextView
                    android:id="@+id/newMessageTextRight"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:textColor='@android:color/white'>
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:textColor='@android:color/white'>
            </LinearLayout>

            <LinearLayout

                android:layout_weight="0.08"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/chatTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="sign_in"
                    android:background="@drawable/bottom_tab_gradient">
                </Button>
                <Button
                    android:id="@+id/searchTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_tab_gradient">
                </Button>
                <Button
                    android:id="@+id/friendsTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_tab_gradient">
                </Button>
                <Button
                    android:id="@+id/profileTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="sign_in"
                    android:background="@drawable/bottom_tab_gradient">
                </Button>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>