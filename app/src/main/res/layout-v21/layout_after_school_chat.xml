<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-189dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="95"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_part_chat"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"></LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_second_cover"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chat_cover"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingTop="44dp">

                                    <TextView
                                        android:id="@+id/message"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="15dp"
                                        android:fontFamily="@font/font1"
                                        android:gravity="left"
                                        android:text="''UW Madison IS Sweet"
                                        android:textColor="#FFFFFF"
                                        android:textSize="24dp" />

                                    <TextView
                                        android:id="@+id/place"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="9dp"
                                        android:layout_marginRight="15dp"
                                        android:fontFamily="@font/lato_regular"
                                        android:text="University of Wisconsin"
                                        android:textColor="#FFFFFF"
                                        android:textSize="10dp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/poll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="45dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="45dp"
                                android:paddingBottom="7dp"
                                tools:ignore="MissingConstraints">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:clickable="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:id="@+id/option_1_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/inside_clear_border"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right"
                                                    android:paddingStart="4dp"
                                                    android:paddingTop="4dp"
                                                    android:paddingEnd="4dp"
                                                    android:paddingBottom="4dp">

                                                    <LinearLayout
                                                        android:id="@+id/option_1_vote"
                                                        android:layout_width="250dp"
                                                        android:layout_height="wrap_content"
                                                        android:background="@color/colorAccent">

                                                        <TextView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="8dp"
                                                            android:layout_marginTop="2dp"
                                                            android:layout_marginBottom="2dp"
                                                            android:background="#00FFFFFF"
                                                            android:fontFamily="@font/lato_black"
                                                            android:textSize="16dp">

                                                        </TextView>
                                                    </LinearLayout>
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/option_1"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_marginTop="6dp"
                                                        android:layout_marginBottom="6dp"
                                                        android:background="#00FFFFFF"
                                                        android:fontFamily="@font/lato_black"
                                                        android:textColor="#FFFFFF"
                                                        android:textSize="16dp">

                                                    </TextView>

                                                    <LinearLayout
                                                        android:id="@+id/option1Check"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left|center"
                                                        android:layout_marginLeft="5dp"
                                                        android:background="@drawable/small_grey_circle"
                                                        android:gravity="center">

                                                        <LinearLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="3dp"
                                                            android:layout_marginTop="3dp"
                                                            android:layout_marginRight="3dp"
                                                            android:layout_marginBottom="3dp"
                                                            android:background="@drawable/small_check"></LinearLayout>
                                                    </LinearLayout>

                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/option_2_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/clear_border_fill"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right"
                                                    android:paddingStart="4dp"
                                                    android:paddingTop="4dp"
                                                    android:paddingEnd="4dp"
                                                    android:paddingBottom="4dp">

                                                    <LinearLayout
                                                        android:id="@+id/option_2_vote"
                                                        android:layout_width="250dp"
                                                        android:layout_height="wrap_content"
                                                        android:background="@color/colorAccent">

                                                        <TextView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="8dp"
                                                            android:layout_marginTop="2dp"
                                                            android:layout_marginBottom="2dp"
                                                            android:background="#00FFFFFF"
                                                            android:fontFamily="@font/lato_black"
                                                            android:textSize="16dp">

                                                        </TextView>
                                                    </LinearLayout>
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/option_2"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_marginTop="6dp"
                                                        android:layout_marginBottom="6dp"
                                                        android:background="#00FFFFFF"
                                                        android:fontFamily="@font/lato_black"
                                                        android:textColor="#FFFFFF"
                                                        android:textSize="16dp">

                                                    </TextView>

                                                    <LinearLayout
                                                        android:id="@+id/option2Check"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left|center"
                                                        android:layout_marginLeft="5dp"
                                                        android:background="@drawable/small_grey_circle"
                                                        android:gravity="center">

                                                        <LinearLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="3dp"
                                                            android:layout_marginTop="3dp"
                                                            android:layout_marginRight="3dp"
                                                            android:layout_marginBottom="3dp"
                                                            android:background="@drawable/small_check"></LinearLayout>
                                                    </LinearLayout>

                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/option_3_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/clear_border_fill"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right"
                                                    android:paddingStart="4dp"
                                                    android:paddingTop="4dp"
                                                    android:paddingEnd="4dp"
                                                    android:paddingBottom="4dp">

                                                    <LinearLayout
                                                        android:id="@+id/option_3_vote"
                                                        android:layout_width="250dp"
                                                        android:layout_height="wrap_content"
                                                        android:background="@color/colorAccent">

                                                        <TextView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="8dp"
                                                            android:layout_marginTop="2dp"
                                                            android:layout_marginBottom="2dp"
                                                            android:background="#00FFFFFF"
                                                            android:fontFamily="@font/lato_black"
                                                            android:textSize="16dp">

                                                        </TextView>
                                                    </LinearLayout>
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/option_3"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_marginTop="6dp"
                                                        android:layout_marginBottom="6dp"
                                                        android:background="#00FFFFFF"
                                                        android:fontFamily="@font/lato_black"
                                                        android:textColor="#FFFFFF"
                                                        android:textSize="16dp">

                                                    </TextView>

                                                    <LinearLayout
                                                        android:id="@+id/option3Check"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left|center"
                                                        android:layout_marginLeft="5dp"
                                                        android:background="@drawable/small_grey_circle"
                                                        android:gravity="center">

                                                        <LinearLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="3dp"
                                                            android:layout_marginTop="3dp"
                                                            android:layout_marginRight="3dp"
                                                            android:layout_marginBottom="3dp"
                                                            android:background="@drawable/small_check"></LinearLayout>
                                                    </LinearLayout>

                                                </LinearLayout>
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:id="@+id/option_4_box"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/clear_border_fill"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right"
                                                    android:paddingStart="4dp"
                                                    android:paddingTop="4dp"
                                                    android:paddingEnd="4dp"
                                                    android:paddingBottom="4dp">

                                                    <LinearLayout
                                                        android:id="@+id/option_4_vote"
                                                        android:layout_width="100dp"
                                                        android:layout_height="wrap_content"
                                                        android:background="@color/colorAccent">

                                                        <TextView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginStart="8dp"
                                                            android:layout_marginTop="2dp"
                                                            android:layout_marginBottom="2dp"
                                                            android:background="#00FFFFFF"
                                                            android:fontFamily="@font/lato_black"
                                                            android:textSize="16dp">

                                                        </TextView>
                                                    </LinearLayout>
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">

                                                    <TextView
                                                        android:id="@+id/option_4"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_marginTop="6dp"
                                                        android:layout_marginBottom="6dp"
                                                        android:background="#00FFFFFF"
                                                        android:fontFamily="@font/lato_black"
                                                        android:textColor="#FFFFFF"
                                                        android:textSize="16dp">

                                                    </TextView>

                                                    <LinearLayout
                                                        android:id="@+id/option4Check"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="left|center"
                                                        android:layout_marginLeft="5dp"
                                                        android:background="@drawable/small_grey_circle"
                                                        android:gravity="center">

                                                        <LinearLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="3dp"
                                                            android:layout_marginTop="3dp"
                                                            android:layout_marginRight="3dp"
                                                            android:layout_marginBottom="3dp"
                                                            android:background="@drawable/small_check"></LinearLayout>
                                                    </LinearLayout>

                                                </LinearLayout>
                                            </RelativeLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/votePreCast"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="3dp">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">

                                                <TextView
                                                    android:id="@+id/poleNum"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_marginTop="12dp"
                                                    android:layout_marginEnd="10dp"
                                                    android:layout_marginBottom="12dp"
                                                    android:fontFamily="@font/lato_bold"
                                                    android:gravity="left"
                                                    android:text="1 vote"
                                                    android:textColor="#FFFFFF">

                                                </TextView>
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="right">

                                                <LinearLayout
                                                    android:id="@+id/castVote"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:background="@drawable/clear_button">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:fontFamily="@font/lato_bold"
                                                        android:text="Vote"
                                                        android:textColor="#FFFFFF"
                                                        android:textSize="16dp">

                                                    </TextView>
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/box_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="45dp"
                                android:paddingEnd="45dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="vertical"
                                    android:outlineAmbientShadowColor="#FFFFFF"
                                    android:outlineSpotShadowColor="#FFFFFF"
                                    app:cardCornerRadius="7dp"
                                    app:cardElevation="7dp"
                                    app:cardPreventCornerOverlap="false">

                                    <ImageView
                                        android:id="@+id/post_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:background="#001923"></ImageView>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bottomBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="70"
                                        android:gravity="left">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">


                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/profilePic"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginLeft="2dp"
                                                android:layout_marginRight="2dp"
                                                android:clickable="true"
                                                android:src="@drawable/red_marker">

                                            </de.hdodenhof.circleimageview.CircleImageView>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:id="@+id/username"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/lato_bold"
                                                android:clickable="true"
                                                android:text="Big Pop"
                                                android:textColor="#FFFFFF"
                                                android:textSize="16dp">

                                            </TextView>
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="40"
                                        android:gravity="right">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">

                                            <CheckBox
                                                android:id="@+id/like_button"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:button="@drawable/favorite"
                                                android:scaleX="1"
                                                android:scaleY="1"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:id="@+id/like_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="10dp"
                                                android:fontFamily="@font/lato_regular"
                                                android:text="15"
                                                android:textColor="#eeffffff"
                                                android:textSize="21dp">

                                            </TextView>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">

                                            <CheckBox
                                                android:id="@+id/comment_button"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:button="@drawable/white_chat"
                                                android:scaleX="1"
                                                android:scaleY="1"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:id="@+id/comment_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/lato_regular"
                                                android:paddingRight="10dp"
                                                android:text="10"
                                                android:textColor="#eeffffff"
                                                android:textSize="21dp">

                                            </TextView>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"></LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>